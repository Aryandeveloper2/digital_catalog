<!DOCTYPE html>
<html dir="rtl" lang="fa">
	<head>
		<meta charset="UTF-8"/>
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<title>{{heading_title}}</title>
		<meta name="viewport" content="width=21cm, initial-scale=1">
		<link rel="stylesheet" href="{{ base }}catalog/view/theme/default/stylesheet/digital_catalog/css/digital_catalog.css"/>
	</head>
	<body >
		<!--loading-->
		<div id="pdf-loading-overlay" dir="{{ direction }}">
			<div class="loading-text">{{ text_loading_message }}</div>
		</div>


		<div id="pdf_content">

			{% for product_data in products %}
				<div class="product-page" style="page-break-after: {{ loop.last ? 'auto' : 'always' }};  padding-right:7px; padding-top:7px;">
					<header>
						<div class="store_logo">
							<img src="{{ base }}catalog/view/theme/default/stylesheet/digital_catalog/image/logo-bazar-rug-01.jpg" width="70px"/>
						</div>
						<div class="store_name">{{ store_name }}</div>
						<div class="catalog_date">
							<div class="date_title">{{ text_products_catalogue }}</div>
							<div class="date_date">{{ product_data.current_date }}</div>
						</div>
					</header>
					<main class="main" style=" direction: rtl;">

						<div class="product_description">

							{% if show_model %}
								<div class="description_section">
									<div class="title model-title">{{text_model_title}}</div>
									<div class="model_d">{{ product_data.product.model }}</div>
								</div>
							{% endif %}

							{% if show_color and product_data.color_data is defined and product_data.color_data %}
								<div class="description_section color_wrapper">
									<div class="title">{{text_colors_title}}</div>
									<ul class="product_color">
										{% for color in product_data.color_data %}
											<li>
												<div class="color_box" style="background-color: {{ color.code }};"></div>
												<div class="color_title">{{ color.name }}</div>
											</li>
										{% endfor %}
									</ul>
								</div>
							{% endif %}

							{% if show_attributes %}
								<div class="description_section">
									<div class="attribute_title"> {{text_attributes_title}}</div>
									<ul class="attribute_list">
										{% for group in product_data.attributes %}
											{% for attr in group.attribute %}
												<li>{{ attr.text }}</li>
											{% endfor %}
										{% endfor %}
									</ul>
								</div>
							{% endif %}

						</div>

						{% if show_image %}
							<div class="product_image">
								<div class="col_1">
									{% if product_data.product.main_image %}
										<div class="first_image">
											<div class="img-warper">
												<img src="{{ product_data.product.main_image }}" alt="Main Image"/>
											</div>
										</div>
									{% endif %}

									{# نمایش ۱ تصویر جانبی اضافه در col_1 اگر بیشتر از ۴ تصویر جانبی داشتیم #}
									{% if product_data.images|length > 4 %}
										<div>
											<img src="{{ product_data.images[4].image }}" alt="Additional Image"/>
										</div>
									{% endif %}

									{% if show_collection %}
										<section class="category">
											<span class="category_title">{{text_collection}}</span>
											<span class="category_name">{{  product_data.category_name }}</span>
										</section>
									{% endif %}
								</div>

								<div
									class="col_2">
									{# ۴ تصویر جانبی اول #}
									{% for img in product_data.images|slice(0, 4) %}
										<div>
											<img src="{{ img.image }}" alt="Additional Image"/>
										</div>
									{% endfor %}
								</div>
							</div>
						{% endif %}

						<div class="last-section">
							{% if show_description %}
								<div class="description_section description" dir="{{ direction }}">
									<span>{{ product_data.description|raw }}</span>
								</div>
							{% endif %}
							<div class="description_section detail">
								<div class="section_1">
									{% if show_qrcode %}
										<img src="{{ product_data.qrcode }}" alt="QR Code محصول {{ product_data.product.name }}" class="qr">
									{% endif %}

									<ul class="contact">
										{% if show_address %}
											<li>
												<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewbox="0 0 16 16">
													<path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z"/><path d="m8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
												</svg>
												<span>{{ store_address }}</span>
											</li>
										{% endif %}
										{% if show_email %}
											<li>
												<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewbox="0 0 16 16">
													<path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
												</svg>
												<span>{{ store_email }}</span>
											</li>
										{% endif %}
										{% if show_phone %}
											<li>
												<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewbox="0 0 16 16">
													<path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
												</svg>
												<span>{{ store_telephone }}</span>
											</li>
										{% endif %}
									</ul>
								</div>
								<div class="section_2">
									{% if show_price %}
										<div class="price_box">
											<span class="label price_label">{{ text_price }}<span>:</span>
											</span>
											<span class="item price">{{ product_data.product.price }}</span>
										</div>
									{% endif %}
									{% if show_sku %}
										<div>
											<span class="label">{{text_sku}}<span>:</span>
											</span>
											<span class="item">{{ product_data.sku }}</span>
										</div>
									{% endif %}
									{% if show_id %}
										<div>
											<span class="label">{{ text_product_page_address }}<span>:</span>
											</span>
											<span class="item">https://bazarrug.com/product/p-{{ product_data.product.product_id }}</span>
										</div>
									{% endif %}
								</div>
							</div>
						</div>
					</main>
					<footer>
						zojvgik
					</footer>
				</div>
			{% else %}
				<p style="text-align:center; color:red;">{{ text_no_product_found }}</p>
			{% endfor %}

		</div>

		{# <script src="{{ base }}catalog/view/theme/default/stylesheet/digital_catalog/js/html2pdf.bundle.min.js"></script> #}
		<script src="{{ base }}catalog/view/theme/default/stylesheet/digital_catalog/js/html2canvas.min.js"></script> 
		<script src="{{ base }}catalog/view/theme/default/stylesheet/digital_catalog/js/jspdf.umd.min.js"></script> 
		<script>
document.addEventListener('DOMContentLoaded', async function() {

    // --- تابع ویرایش علائم نگارشی ---
    function formatPunctuation() {
        var textElements = document.querySelectorAll('.description_section.description span');
        textElements.forEach(function(element) {
            var text = element.innerHTML;
            var newText = text.replace(/([,.;?،؛؟])/g, '<span>$1</span>');
            element.innerHTML = newText;
        });
    }

    // --- تابع ساخت PDF نهایی ---
    async function generatePDF() {
        window.scrollTo(0, 0);
        document.body.style.overflow = 'hidden';
        
        const overlay = document.getElementById('pdf-loading-overlay');
        if (overlay) {
            overlay.style.display = 'block';
        }

        const products = document.querySelectorAll('.product-page');
        if (products.length === 0) {
            console.error('No product pages found.');
            return;
        }
        
        const doc = new window.jspdf.jsPDF({
            orientation: 'portrait',
            unit: 'mm',
            format: 'a4'
        });

        for (let i = 0; i < products.length; i++) {
            const productPage = products[i];
            
            await new Promise(resolve => {
                const images = productPage.querySelectorAll('img');
                const promises = [];
                images.forEach(img => {
                    if (img.complete) {
                        return;
                    }
                    promises.push(new Promise(res => { img.onload = img.onerror = res; }));
                });
                if (promises.length > 0) {
                    Promise.all(promises).then(resolve);
                } else {
                    resolve();
                }
            });


            document.querySelectorAll('.product-page').forEach(p => p.style.display = 'none');
            productPage.style.display = 'block';

            const canvas = await html2canvas(productPage, {
                scale: 2,
                useCORS: true,
                logging: false,
                allowTaint: true
            });

            if (i > 0) {
                doc.addPage();
            }

            const imgData = canvas.toDataURL('image/jpeg', 0.98);
            const imgProps = doc.getImageProperties(imgData);
            const pdfWidth = doc.internal.pageSize.getWidth();
            const pdfHeight = (imgProps.height * pdfWidth) / imgProps.width;
            
            doc.addImage(imgData, 'JPEG', 0, 0, pdfWidth, pdfHeight);

            await new Promise(resolve => setTimeout(resolve, 50));
        }
        document.querySelectorAll('.product-page').forEach(p => p.style.display = '');
        if (overlay) {
            overlay.style.display = 'none';
        }
        document.body.style.overflow = '';
        doc.save('Digital_catalog.pdf');
    }

    formatPunctuation();
    generatePDF();
});
    
</script>
	</body>
</html>
